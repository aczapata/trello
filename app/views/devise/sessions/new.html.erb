<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<form>
    <div class="row">
      <div class="large-12 columns">
        <h2>Log in</h2>
        <%= devise_error_messages! %>
      </div>
    </div>
    
    
      <div class="row">
      <div class="large-12 columns">
       <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="large-12 columns">
        <div class="actions">
    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
  </div>
      </div>
    </div>
    
      <div class="row">
      <div class="large-12 columns">
        <div class="actions">
    <%= f.submit "Log in" , :class =>"button"%>
    <%= link_to 'Cancel', tasks_path , :class =>"button secondary"%>
  </div>
      </div>
    </div>
      
  </form>
  
<% end %>


