<div class="row">
  <div class="large-4 columns">
    <h2>Finished</h2>

    <% @done_tasks.each do |task| %>
   
        <h3><%= task.title %></h3>
        <h4>by:<%= task.user.username %><h4>
        <p>End date: <%= task.end_date %><p>
        <%= link_to 'Show', task_path(task),:class =>"button" %>
        
   <% end %></div>
  <div class="large-4 columns">
    <h2>Expired</h2>

    <% @expired_tasks.each do |task| %>
    
    <h3><%= task.title %></h3>
        <h4>by:<%= task.user.username %><h4>
        <p>End date: <%= task.end_date %><p>
        <%= link_to 'Show', task_path(task),:class =>"button" %>
   <% end %></div>
  <div class="large-4 columns">
    <h2>Not Finished</h2>

    <% @notdone_tasks.each do |task| %>
    <h3><%= task.title %></h3>
        <h4>by:<%= task.user.username %><h4>
        <p>End date: <%= task.end_date %><p>
        <%= link_to 'Show', task_path(task),:class =>"button" %>
   <% end %>
    
    </div>
</div>







